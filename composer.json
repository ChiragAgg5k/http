{
    "name": "utopia-php/framework",
    "description": "A simple, light and advanced PHP framework",
    "type": "library",
    "keywords": ["php","framework", "upf"],
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Eldad Fux",
            "email": "eldad@appwrite.io"
        }
    ],
    "scripts": {
        "check": "./vendor/bin/phpstan analyse -l 5 src tests"
